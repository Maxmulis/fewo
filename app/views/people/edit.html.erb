<h1>Person bearbeiten</h1>
  <%= form_with model: @person do |form| %>

    <%= form.label :first_name %>
    <%= form.text_field :first_name, placeholder: "Vorname", value: @person.first_name, required: true %>

    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "Nachname", value: @person.name, required: true %>

    <%= form.label :dob %>
    <%= form.date_field :dob, required: true %>

    <%= form.label :phone %>
    <%= form.text_field :phone, placeholder: "Telefon", value: @person.phone %>

    <%= fields_for :user, @person.user do |user_form| %>
      <%= user_form.label :email %>
      <%= user_form.text_field :email, value: @person.user.email %>
    <% end %>
    <%= form.submit %>
<% end %>

<% if @person&.user&.invited_to_sign_up? %>
  <%= button_to "Invite", invite_user_path(@person.user), role: "button", class: "primary", method: :patch %>
<% end %>