<%= form_with model: [household, person], class: "space-y-6" do |form| %>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <div>
      <%= form.label :first_name, t('activerecord.attributes.person.first_name'), class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :first_name, placeholder: t('activerecord.attributes.person.first_name'), value: person.first_name, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :name, t('activerecord.attributes.person.name'), class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, placeholder: t('activerecord.attributes.person.name'), value: person.name, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>
  </div>

  <div>
    <%= form.label :dob, t('activerecord.attributes.person.dob'), class: "block text-sm font-medium text-gray-700" %>
    <%= form.date_field :dob, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :phone, t('activerecord.attributes.person.phone'), class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :phone, placeholder: t('activerecord.attributes.person.phone'), value: person.phone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>

  <%= fields_for :user, person.user do |user_form| %>
    <div>
      <%= user_form.label :email, t('activerecord.attributes.user.email'), class: "block text-sm font-medium text-gray-700" %>
      <%= user_form.text_field :email, placeholder: t('activerecord.attributes.user.email'), value: person.user&.email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>
  <% end %>

  <div class="flex justify-end">
    <%= form.submit t('people.form.add_person'), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>
