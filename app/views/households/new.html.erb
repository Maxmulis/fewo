<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900"><%= t('.title') %></h1>
  </div>

  <% if @similar_households.any? %>
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800"><%= t('.duplicate_warning_title') %></h3>
          <div class="mt-2 text-sm text-yellow-700">
            <p><%= t('.duplicate_warning_description') %></p>
            <ul class="list-disc list-inside mt-2 space-y-1">
              <% @similar_households.each do |household| %>
                <li>
                  <%= link_to household.recipient, household_path(household), class: "underline hover:text-yellow-900" %> -
                  <%= household.full_address %>
                </li>
              <% end %>
            </ul>
            <p class="mt-2"><%= t('.duplicate_warning_continue') %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow rounded-lg p-6">
    <%= render partial: 'form', locals: { household: @household, path: households_path } %>
  </div>
</div>
