<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <h1 class="text-4xl font-bold"><%= t('.title') %></h1>
    <%= link_to new_household_path, class: "btn btn-primary gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      <%= t('.new_household') %>
    <% end %>
  </div>

  <!-- Households List -->
  <% if @households.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @households.each do |household| %>
        <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
          <div class="card-body">
            <h2 class="card-title">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              <%= household.recipient %>
            </h2>

            <div class="text-sm text-base-content/70 space-y-1 my-3">
              <p><%= household.street %> <%= household.number %></p>
              <p><%= household.zip_code %> <%= household.town %></p>
            </div>

            <div class="divider my-2"></div>

            <div class="space-y-2">
              <div class="flex items-center gap-2 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-base-content/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <span class="font-semibold text-primary"><%= household.people.count %></span>
                <span><%= t('people.count', count: household.people.count) %></span>
              </div>

              <% if household.people.any? %>
                <ul class="text-sm space-y-1 ml-7">
                  <% household.people.limit(3).each do |person| %>
                    <li class="text-base-content/70">â€¢ <%= person.full_name %></li>
                  <% end %>
                  <% if household.people.count > 3 %>
                    <li class="text-base-content/60 italic"><%= t('.and_more', count: household.people.count - 3) %></li>
                  <% end %>
                </ul>
              <% end %>
            </div>

            <div class="card-actions justify-end mt-4 gap-2">
              <%= link_to household_path(household), class: "btn btn-primary btn-sm" do %>
                <%= t('.details') %>
              <% end %>
              <%= link_to edit_household_path(household), class: "btn btn-primary btn-outline btn-sm" do %>
                <%= t('common.actions.edit') %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body items-center text-center">
        <svg class="h-16 w-16 text-base-content/40" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        <h3 class="card-title"><%= t('.no_households') %></h3>
        <p class="text-base-content/70"><%= t('.no_households_description') %></p>
        <div class="card-actions">
          <%= link_to new_household_path, class: "btn btn-primary gap-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <%= t('.new_household') %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
