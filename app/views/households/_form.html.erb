<%= form_with model: household, url: path, class: "space-y-6" do |f| %>
  <div>
    <%= f.label :recipient, t('activerecord.attributes.household.recipient'), class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :recipient, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-4 gap-4">
    <div class="sm:col-span-3">
      <%= f.label :street, t('activerecord.attributes.household.street'), class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :street, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :number, t('activerecord.attributes.household.number'), class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
    <div>
      <%= f.label :zip_code, t('activerecord.attributes.household.zip_code'), class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :zip_code, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div class="sm:col-span-2">
      <%= f.label :town, t('activerecord.attributes.household.town'), class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :town, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>
  </div>

  <div>
    <%= f.label :country_code, t('activerecord.attributes.household.country_code'), class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :country_code, placeholder: t('households.form.country_placeholder'), class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to t('common.actions.cancel'), households_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= f.submit t('households.form.save'), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>
