<div class="flex min-h-[70vh] items-center justify-center">
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-3xl font-bold justify-center mb-6"><%= t('.title') %></h2>
      <p class="text-center text-base-content/70 mb-4"><%= t('.description') %></p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%= render 'shared/components/form_input',
            form: f,
            field: :email,
            label: t('activerecord.attributes.user.email'),
            type: 'email',
            required: true,
            autocomplete: 'email',
            autofocus: true %>

        <div class="form-control mt-6">
          <%= f.submit t('.submit'), class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider"><%= t('devise.sessions.new.or') %></div>

      <div class="text-center space-y-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
