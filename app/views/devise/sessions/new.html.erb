<div class="flex min-h-[70vh] items-center justify-center">
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-3xl font-bold justify-center mb-6"><%= t('.title') %></h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <%= render 'shared/components/form_input',
            form: f,
            field: :email,
            label: t('activerecord.attributes.user.email'),
            type: 'email',
            required: true,
            autocomplete: 'email',
            autofocus: true %>

        <%= render 'shared/components/form_input',
            form: f,
            field: :password,
            label: t('activerecord.attributes.user.password'),
            type: 'password',
            required: true,
            autocomplete: 'current-password' %>

        <% if devise_mapping.rememberable? %>
          <div class="form-control">
            <label class="label cursor-pointer justify-start gap-2">
              <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
              <span class="label-text"><%= t('activerecord.attributes.user.remember_me') %></span>
            </label>
          </div>
        <% end %>

        <div class="form-control mt-6">
          <%= f.submit t('.submit'), class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider"><%= t('.or') %></div>

      <div class="text-center space-y-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
