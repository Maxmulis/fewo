<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-xl font-bold text-gray-900 mb-4"><%= t('.title') %></h1>

  <%= form_with model: @camp, class: "space-y-6 bg-white p-8 rounded-md shadow" do |form| %>
    <% if @camp.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-400 p-4">
        <h2 class="text-sm font-medium text-red-700 mb-2"><%= pluralize(@camp.errors.count, "error") %> prohibited this camp from being saved:</h2>
        <ul class="list-disc list-inside text-sm text-red-700">
          <% @camp.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :start_date, t('activerecord.attributes.camp.start_date'), class: "block text-sm font-medium text-gray-700" %>
      <%= form.date_field :start_date, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :end_date, t('activerecord.attributes.camp.end_date'), class: "block text-sm font-medium text-gray-700" %>
      <%= form.date_field :end_date, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :place_id, t('activerecord.attributes.camp.place'), class: "block text-sm font-medium text-gray-700" %>
      <%= form.collection_select :place_id, @places, :id, :name, { prompt: t('.select_place') }, { required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
    </div>

    <div class="flex justify-end space-x-3">
      <%= link_to t('common.actions.cancel'), camps_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= form.submit t('.save_camp'), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div>
