<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <h1 class="text-4xl font-bold"><%= t('.title') %></h1>
    <% if policy(Camp).create? %>
      <%= link_to new_camp_path, class: "btn btn-primary gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <%= t('.new_camp') %>
      <% end %>
    <% end %>
  </div>

  <!-- Camps List -->
  <% if @camps.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @camps.each do |camp| %>
        <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
          <div class="card-body">
            <div class="flex items-center justify-between">
              <h2 class="card-title"><%= camp.place.name %></h2>
              <%= render 'shared/components/badge', text: camp.year, variant: 'primary', size: 'lg' %>
            </div>

            <div class="space-y-2 my-4">
              <div class="flex items-center gap-2 text-sm">
                <svg class="h-5 w-5 text-base-content/70" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span><%= camp.start_date.strftime("%d.%m.%Y") %> - <%= camp.end_date.strftime("%d.%m.%Y") %></span>
              </div>

              <div class="flex items-center gap-2 text-sm">
                <svg class="h-5 w-5 text-base-content/70" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                <span><span class="font-semibold text-primary"><%= camp.registrations.count %></span> <%= t('registrations.count', count: camp.registrations.count) %></span>
              </div>
            </div>

            <div class="card-actions justify-end">
              <%= link_to t('.show_details'), camp_path(camp), class: "btn btn-primary btn-outline btn-block" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body items-center text-center">
        <svg class="h-16 w-16 text-base-content/40" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
        </svg>
        <h3 class="card-title"><%= t('.no_camps_title') %></h3>
        <p class="text-base-content/70"><%= t('.no_camps_description') %></p>
        <% if policy(Camp).create? %>
          <div class="card-actions">
            <%= link_to new_camp_path, class: "btn btn-primary gap-2" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              <%= t('.create_first_camp') %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
