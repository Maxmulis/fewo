<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900"><%= t('.title') %></h1>
    <p class="mt-2 text-sm text-gray-600"><%= t('.subtitle', camp_name: @camp.place.name, year: @camp.year) %></p>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with(model: @registration, url: camp_registrations_path(@camp), method: :post, class: "space-y-6") do |form| %>
      <div>
        <%= form.label :person_id, t('activerecord.attributes.registration.person'), class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :person_id,
            options_for_select(@people.map { |person| [person.full_name, person.id] }, selected: nil),
            { include_blank: t('.person_select_prompt') },
            required: true,
            aria: { label: t('.person_select_prompt') },
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :arrival_date, t('activerecord.attributes.registration.arrival_date'), class: "block text-sm font-medium text-gray-700" %>
        <%= form.datetime_local_field :arrival_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :departure_date, t('activerecord.attributes.registration.departure_date'), class: "block text-sm font-medium text-gray-700" %>
        <%= form.datetime_local_field :departure_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <% if current_user.admin? %>
        <div class="flex items-start">
          <div class="flex items-center h-5">
            <%= form.check_box :make_team_member, class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 rounded" %>
          </div>
          <div class="ml-3 text-sm">
            <%= form.label :make_team_member, t('.make_team_member'), class: "font-medium text-gray-700" %>
            <p class="text-gray-500"><%= t('.team_member_description') %></p>
          </div>
        </div>
      <% end %>

      <div class="flex justify-end space-x-3">
        <%= link_to t('common.actions.cancel'), camp_path(@camp), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= form.submit t('.submit'), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
