<div class="navbar bg-base-100 shadow-lg">
  <div class="navbar-start">
    <!-- Mobile Dropdown -->
    <div class="dropdown lg:hidden">
      <div tabindex="0" role="button" class="btn btn-ghost">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
        </svg>
      </div>
      <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
        <% if current_user %>
          <li><%= link_to "Dashboard", dashboard_index_path %></li>

          <% if current_user.admin? %>
            <li>
              <span class="menu-title">Lager</span>
              <ul>
                <li><%= link_to "Alle Lager", camps_path %></li>
                <li><%= link_to "Neues Lager", new_camp_path %></li>
              </ul>
            </li>
            <li>
              <span class="menu-title">Teilnehmende</span>
              <ul>
                <li><%= link_to "Alle Teilnehmenden", people_path %></li>
                <li><%= link_to "Neuer Haushalt", new_household_path %></li>
              </ul>
            </li>
          <% elsif current_user.team_member? %>
            <% if team_member_camps.any? %>
              <li>
                <span class="menu-title">Meine Lager</span>
                <ul>
                  <% team_member_camps.each do |camp| %>
                    <li><%= link_to "#{camp.place.name} #{camp.year}", camp_path(camp) %></li>
                  <% end %>
                </ul>
              </li>
            <% end %>
            <li><%= link_to "Alle Lager", camps_path %></li>
          <% else %>
            <li><%= link_to "Meine Registrierungen", dashboard_index_path %></li>
            <% if current_user.person.household %>
              <li><%= link_to "Mein Haushalt", household_path(current_user.person.household) %></li>
            <% end %>
            <li><%= link_to "Lager", camps_path %></li>
          <% end %>
          <li class="menu-title">Konto</li>
          <li><%= link_to "Profil", edit_person_path(current_user.person) %></li>
          <li><%= button_to "Abmelden", destroy_user_session_path, method: :delete, class: "text-error" %></li>
        <% else %>
          <li><%= link_to "Anmelden", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>

    <!-- Logo/Brand -->
    <%= link_to root_path, class: "btn btn-ghost text-xl" do %>
      Ã–kumenische Ferienwoche
    <% end %>
  </div>

  <!-- Desktop Navigation -->
  <div class="navbar-center hidden lg:flex">
    <ul class="menu menu-horizontal px-1">
      <% if current_user %>
        <li><%= link_to "Dashboard", dashboard_index_path, class: current_page?(dashboard_index_path) ? 'active' : '' %></li>

        <% if current_user.admin? %>
          <li>
            <details>
              <summary>Lager</summary>
              <ul class="p-2 z-10 bg-base-100 rounded-t-none">
                <li><%= link_to "Alle Lager", camps_path %></li>
                <li><%= link_to "Neues Lager", new_camp_path %></li>
              </ul>
            </details>
          </li>
          <li>
            <details>
              <summary>Teilnehmende</summary>
              <ul class="p-2 z-10 bg-base-100 rounded-t-none">
                <li><%= link_to "Alle Teilnehmenden", people_path %></li>
                <li><%= link_to "Neuer Haushalt", new_household_path %></li>
              </ul>
            </details>
          </li>
        <% elsif current_user.team_member? %>
          <% if team_member_camps.any? %>
            <li>
              <details>
                <summary>Meine Lager</summary>
                <ul class="p-2 z-10 bg-base-100 rounded-t-none">
                  <% team_member_camps.each do |camp| %>
                    <li><%= link_to "#{camp.place.name} #{camp.year}", camp_path(camp) %></li>
                  <% end %>
                </ul>
              </details>
            </li>
          <% end %>
          <li><%= link_to "Alle Lager", camps_path, class: current_page?(camps_path) ? 'active' : '' %></li>
        <% else %>
          <li><%= link_to "Meine Registrierungen", dashboard_index_path, class: current_page?(dashboard_index_path) ? 'active' : '' %></li>
          <% if current_user.person.household %>
            <li><%= link_to "Mein Haushalt", household_path(current_user.person.household), class: current_page?(household_path(current_user.person.household)) ? 'active' : '' %></li>
          <% end %>
          <li><%= link_to "Lager", camps_path, class: current_page?(camps_path) ? 'active' : '' %></li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <!-- User Menu -->
  <div class="navbar-end">
    <% if current_user %>
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar placeholder">
          <div class="bg-primary text-primary-content rounded-full w-10">
            <span class="text-xl"><%= current_user.person.first_name[0] %></span>
          </div>
        </div>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
          <li class="menu-title"><%= current_user.person.full_name %></li>
          <li><%= link_to "Profil", edit_person_path(current_user.person) %></li>
          <li><%= button_to "Abmelden", destroy_user_session_path, method: :delete, class: "text-error" %></li>
        </ul>
      </div>
    <% else %>
      <%= link_to "Anmelden", new_user_session_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
